{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["../../../packages/db"],
      "@repo/schema": ["../../../packages/schema"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
